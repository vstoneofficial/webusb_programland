<?xml version="1.0" encoding="utf-8"?>
<toolboxes>
    <toolbox>
        <id>toolboxBeginner</id>
        <sep gap="3"></sep>
        <category name="ライト" colour="60">
            <!--block type="led_base_red"></block-->
            <block type="led_base">
                <field name="LEDCOLOR">#ff0000</field>
                <value name="VALUE">
                    <block type="do_sec">
                        <field name="FIELDNAME">0.5</field>
                    </block>
                </value>
            </block>
            <!--block type="led_base_red"></block-->
            <block type="led_base">
                <field name="LEDCOLOR">#00ff00</field>
                <value name="VALUE">
                    <block type="do_sec">
                        <field name="FIELDNAME">0.5</field>
                    </block>
                </value>
            </block>
            <block type="led_base">
                <field name="LEDCOLOR">#ff0000</field>
            </block>
            <!--block type="led_base_red"></block-->
            <block type="led_base">
                <field name="LEDCOLOR">#00ff00</field>
            </block>

        </category>
        <sep gap="3"></sep>

        <category name="ブザー" colour="210">
            <!--block type="led_base_red"></block-->
            <block type="buzzer_base">
                <field name="BUZ_OCTAVE">2</field>
                <field name="BUZ_TONE">1</field>
                <field name="BUZ_TIME">48</field>
                <field name="BUZ_NEXT">1</field>
            </block>
            <block type="buzzer_base">
                <field name="BUZ_OCTAVE">3</field>
                <field name="BUZ_TONE">1</field>
                <field name="BUZ_TIME">48</field>
                <field name="BUZ_NEXT">1</field>
            </block>
            <block type="buzzer_base">
                <field name="BUZ_OCTAVE">1</field>
                <field name="BUZ_TONE">1</field>
                <field name="BUZ_TIME">48</field>
                <field name="BUZ_NEXT">1</field>
            </block>
            <!--block type="led_base_red"></block-->
            <block type="buzzer_base">
                <field name="BUZ_OCTAVE">0</field>
                <field name="BUZ_TONE">1</field>
                <field name="BUZ_TIME">48</field>
                <field name="BUZ_NEXT">0</field>
            </block>

        </category>
        <sep gap="3"></sep>

        <category name="つづける" colour="290">

            <block type="wait_base">
                <value name="VALUE">
                    <shadow type="do_sec">
                        <field name="FIELDNAME">1</field>
                    </shadow>
                </value>                    
            </block>

            <block type="do_sec"></block>
        </category>

        <sep gap="3"></sep>
        <category name="くり返し" colour="350">
            <block type="loop_base"></block>
            <block type="endlessloop_base"></block>
        </category>
        <sep gap="3"></sep>

        <category name="はい/いいえ" colour="120">
            <block type="if_base">
                <field name="CMP">TEMP</field>
            </block>
            <block type="ifelse_base">
                <field name="CMP">TEMP</field>
            </block>
            <block type="random_base"></block>
        </category>
        <sep gap="3"></sep>

        <category name="おわり" colour="20">
            <block type="end"></block>
        </category>
    </toolbox>



